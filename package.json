{
  "name": "api-mocker-extension",
  "displayName": "API Mocker",
  "version": "1.0.0",
  "description": "Chrome extension for mocking HTTP requests",
  "author": "Your Name",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "type-check": "tsc --noEmit",
    "package": "plasmo package"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "@monaco-editor/react": "^4.7.0",
    "antd": "^5.21.0",
    "mockjs": "^1.1.0",
    "monaco-editor": "^0.54.0",
    "plasmo": "^0.89.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.5.0",
    "@types/chrome": "^0.0.270",
    "@types/mockjs": "^1.0.10",
    "@types/node": "^22.15.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "monaco-editor-webpack-plugin": "^7.1.1",
    "prettier": "^3.4.2",
    "sharp": "^0.34.5",
    "typescript": "^5.5.4"
  },
  "manifest": {
    "host_permissions": [
      "<all_urls>"
    ],
    "permissions": [
      "storage",
      "activeTab",
      "webRequest",
      "webRequestBlocking"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "static/inject.js"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}
